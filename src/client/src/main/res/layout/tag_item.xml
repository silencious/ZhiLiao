<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    >

    <TextView
        android:id="@+id/tag_item_tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tag_item_btn_remove"
        android:gravity="center_vertical|center"
        android:inputType="textMultiLine"
        android:textSize="20dp" 
		android:textColor="@color/bg_4" />

    <Button
        android:id="@+id/tag_item_btn_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/add" />

    <Button
        android:id="@+id/tag_item_btn_remove"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tag_item_btn_add"
        android:background="@drawable/remove" />
 
</RelativeLayout>